<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:background="@color/white"
                android:onClick="onBtnTogether"
                android:id="@+id/imageButton" />

            <TextView
                android:text="朋友聚會"
                android:textAlignment="center"
                android:textSize="@dimen/text_bigsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView9" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:background="@color/white"
                android:onClick="onBtnConvenient"
                android:id="@+id/imageButton2" />

            <TextView
                android:text="便當"
                android:textAlignment="center"
                android:textSize="@dimen/text_bigsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView10" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:background="@color/white"
                android:onClick="onBtnSupper"
                android:id="@+id/imageButton3" />

            <TextView
                android:text="宵夜"
                android:textAlignment="center"
                android:textSize="@dimen/text_bigsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView11" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageButton4"
                android:background="@color/white"
                android:onClick="onBtnNightMarket"
                android:layout_weight="1" />

            <TextView
                android:text="夜市小吃"
                android:textSize="@dimen/text_bigsize"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageButton5"
                android:background="@color/white"
                android:onClick="onBtnDrink"
                android:layout_weight="1" />

            <TextView
                android:text="飲料"
                android:textAlignment="center"
                android:textSize="@dimen/text_bigsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:layout_marginLeft="2.5dp"
            android:layout_marginRight="2.5dp">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@mipmap/ic_launcher"
                android:id="@+id/imageButton6"
                android:background="@color/white"
                android:onClick="onBtnShopMap"
                android:layout_weight="1" />

            <TextView
                android:text="特約商店地圖"
                android:textAlignment="center"
                android:textSize="@dimen/text_bigsize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>